<% content_for :heading do %>Listing events<% end %>

<!-- <ul data-jqm-role="listview" data-jqm-filter="true"> -->
<ul data-jqm-role="listview" data-jqm-inset="true" data-jqm-filter="false">
  <% @events.each do |event| %>
    <li><%= event.description %> <%= event.amount %>
      <ul>
        <li><%= link_to 'Show', event, html_options: { "data-jqm-ajax" => "false" } %></li>
        <li><%= link_to 'Edit', edit_event_path(event), html_options: { "data-jqm-ajax" => "false" } %></li>
        <li><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, html_options: { "data-jqm-ajax" => "false" } %></li>
      </ul>
    </li>
  <% end %>
</ul>

<br />

<%= link_to 'New Event', new_event_path %>
